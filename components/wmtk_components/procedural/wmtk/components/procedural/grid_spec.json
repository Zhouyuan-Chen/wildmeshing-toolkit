[
    {
        "pointer": "/",
        "type": "object",
        "required": [
            "dimensions"
        ],
        "optional": [
            "coordinates",
            "tiling"
        ],
        "doc": "Settings for a regular grid"

    },
    {
        "pointer": "/tiling",
        "type": "string",
        "default": "",
        "doc": "tiling method used to generate the grid"
    },
    {
        "pointer": "/dimensions",
        "type": "list",
        "min": 1,
        "min": 3,
        "doc": "The number of elements along each axis of the grid"
    },
    {
        "pointer": "/dimensions/*",
        "type": "int"
    },

    {
        "pointer": "/coordinates",
        "type": "object",
        "required": [
            "name",
            "spacing"
        ]

    },
    {
        "pointer": "/coordinates/name",
        "type": "string",
        "doc": "The name of hte attribute this coordinate will be written to"
    },
    {
        "pointer": "/coordinates/spacing",
        "type": "list",
        "min": 1,
        "max": 3,
        "doc": "The spacing between any node in the grid in each axis. Must be the same size as dimensions."
    },
    {
        "pointer": "/coordinates/spacing/*",
        "type": "float"
    }
]
